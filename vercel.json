{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/submit",
      "dest": "backend/server.js",
      "methods": ["POST"]
    },
    {
      "src": "/api/invoices/(.*)",
      "dest": "backend/server.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/previous-prices",
      "dest": "backend/server.js",
      "methods": ["GET"]
    },
}
