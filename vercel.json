{
  "version": 2,
  "builds": [
    {"src": "backend/server.js", "use": "@vercel/node"},
    {"src": "frontend/package.json", "use": "@vercel/static-build", "config": {"distDir": "../public"}}
  ],
  "routes": [
    {"src": "/api/(.*)", "dest": "backend/server.js"},
    {"src": "/static/(.*)", "dest": "/public/static/$1"},
    {"src": "/(.*)", "dest": "/public/index.html"}
  ]
}